{
  "project_name": "PDF-Extraction",
  "description": "FastAPI microservice for extracting structured data from academic PDFs using Gemini Vision API",

  "model_preferences": {
    "default": "sonnet",
    "planning": "opus",
    "code_review": "sonnet"
  },

  "python": {
    "version": "3.11+",
    "formatter": "black",
    "linter": "ruff",
    "type_checker": "mypy"
  },

  "file_exclusions": [
    ".env",
    ".env.local",
    "*.pyc",
    "__pycache__/",
    "*.pyo",
    "*.pyd",
    ".Python",
    "venv/",
    "env/",
    "ENV/",
    ".venv/",
    "*.egg-info/",
    "dist/",
    "build/",
    ".pytest_cache/",
    ".coverage",
    "htmlcov/",
    ".mypy_cache/",
    ".ruff_cache/",
    "*.log",
    ".DS_Store",
    "Thumbs.db"
  ],

  "watch_patterns": [
    "*.py",
    "*.md",
    "requirements.txt",
    ".env.example"
  ],

  "testing": {
    "framework": "pytest",
    "coverage_threshold": 80,
    "test_command": "pytest tests/ -v --cov=app"
  },

  "api": {
    "framework": "FastAPI",
    "default_port": 8000,
    "reload": true
  },

  "dependencies": {
    "core": [
      "fastapi",
      "uvicorn[standard]",
      "python-multipart",
      "pydantic",
      "python-dotenv"
    ],
    "ai": [
      "google-generativeai"
    ],
    "database": [
      "supabase-py"
    ],
    "dev": [
      "pytest",
      "pytest-asyncio",
      "pytest-cov",
      "black",
      "ruff",
      "mypy"
    ]
  },

  "security": {
    "require_https": true,
    "max_upload_size_mb": 10,
    "rate_limit_per_minute": 10,
    "allowed_file_types": [".pdf"]
  }
}
